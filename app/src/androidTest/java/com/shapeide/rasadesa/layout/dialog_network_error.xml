<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/small"
    android:layout_margin="@dimen/big"
    app:cardCornerRadius="@dimen/normal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/big"
        android:paddingVertical="@dimen/normal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            style="@style/TextNormal"
            android:layout_marginVertical="@dimen/small"
            android:text="Warning!" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextSmall"
            android:layout_marginVertical="@dimen/xsmall"
            android:text="You need to connected to internet for using this app." />
    </LinearLayout>
</androidx.cardview.widget.CardView>